    <body>
        <div class="container">
            <div class="row repHead">
                <div class="col-xs-12">
                    <div class="text-right">
                        <span class="studyDate">
                            <%= study.date %>
                        </span>
                    </div>
                    <div>
                        <span class="reportTitle">
                            Basic Report
                        </span>
                    </div>
                    <div class="studySummary">
                        <span><%= report.patientName %>, <%= report.patientBirthdate %></span><br/>
                        <span><%= study.id %></span>
                    </div> 
                </div>
            </div>
            <div class="repContent">
                <div class="separator"></div>
                <div class="row">
                    <div class="col-md-12">
                        <span class="repSubtitle">
                            Panda Roux
                        </span>
                        <div class="col-xs-12 text-center">
                           <img src="<%=serverFolderPath%><%=screenFilter(screens, 'R', 'CC').path%>"/>
                        </div>
                    </div>
                </div>
                <div class="separator"></div>
                <div class="row">
                    <div class="col-xs-12">
                        <span class="repSubtitle">
                            Comments
                        </span>
                        <div class="comments">
                            <%= report.comments %>
                        </div>
                    </div>
                </div>
                <div class="separator"></div>
                <div class="row">
                    <div class="col-xs-12">
                        <span class="repSubtitle">
                            Technical quality satisfaction
                        </span>
                        <% switch(report.techQuality)
                            {
                                case "yes": %>
                                    <div>Correct</div>
                                    <% break;
                                case "no1": %>
                                    <div>Not satisfying, acceptable</div>
                                        <%break;      
                                case "no2": %>
                                    <div>Not satisfying, to be redone</div>
                                    <% break; 
                            } 

                        <!-- If there have been technical issues, we write them down -->
                            if(report.techQuality != "yes")
                            {%>
                                <div class="row">
                                    <div class="col-xs-1">Reasons:</div>
                                    <div class="col-xs-11">
                                        <div class="unsatisfyingCauses">
                                            <%for(var i = 0; i < unsatisfyingCauses.length; i++)
                                            {%>
                                                    <div class="greySquare">
                                                        <%= unsatisfyingCauses[i].title %>
                                                    </div>
                                            <%}%>
                                        </div>
                                    </div>
                                </div>    

                            <%}%>
                    </div>
                </div>
                <div style="height:400px;border:1px solid black;">
                    REMOVE THIS DIV PLEASE AFTER TESTING
                </div>
            </div>
        </div>
    </body>
